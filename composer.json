{
    "repositories": [{
        "type": "composer",
        "url": "https://packagist.org"
    }],
    "name": "gtethan/postmark-php",
    "license": "MIT",
    "description": "Postmark PHP with support for further domain verification",
    "require": {
        "php": ">=5.5.0",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.4.0"
    },
    "autoload": {
        "psr-0": {
            "Postmark\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "src/",
            "tests/"
        ]
    },
    "scripts": {
        "test": "phpunit"
    }
}
